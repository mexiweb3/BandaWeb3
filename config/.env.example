# BandaWeb3 Automation - Environment Variables
# Copiar este archivo a .env y completar con tus credenciales

# ==========================================
# X (Twitter) API Configuration
# ==========================================
# Obtener en: https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# ==========================================
# OpenAI API Configuration (Whisper)
# ==========================================
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de Whisper
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=es  # Español
WHISPER_RESPONSE_FORMAT=json
WHISPER_TEMPERATURE=0.2

# ==========================================
# Anthropic API Configuration (Claude)
# ==========================================
# Obtener en: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Configuración de Claude
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096

# ==========================================
# Email Configuration (for Auto-Download Agent)
# ==========================================
# Email para recibir links de descarga de TwitterSpaceGPT
DOWNLOAD_EMAIL=your_email@gmail.com
DOWNLOAD_EMAIL_PASSWORD=your_app_password_here
# Para Gmail: crear App Password en https://myaccount.google.com/apppasswords

# ==========================================
# n8n Configuration
# ==========================================
# Si usas n8n cloud
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# Si usas n8n self-hosted
N8N_HOST=localhost
N8N_PORT=5678

# ==========================================
# Storage Configuration
# ==========================================
# Ruta base para almacenar episodios
BASE_STORAGE_PATH=/home/davidiego2/Documents/BandaWeb3

# Google Drive (opcional para backup)
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=

# ==========================================
# Content Generation Settings
# ==========================================
# Configuración para generación de contenido
MAX_THREAD_LENGTH=10  # Máximo de tweets por hilo
VIDEO_CLIPS_COUNT=4   # Número de clips por episodio
MIN_CLIP_DURATION=15  # Segundos mínimos por clip
MAX_CLIP_DURATION=60  # Segundos máximos por clip

# ==========================================
# Social Media Settings
# ==========================================
# LinkedIn API
# Crear app en: https://www.linkedin.com/developers/apps
# Documentación: https://learn.microsoft.com/en-us/linkedin/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback

# Instagram Graph API
# Crear app en: https://developers.facebook.com/
# Conectar Instagram Business Account
# Documentación: https://developers.facebook.com/docs/instagram-api
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ==========================================
# Publishing Configuration
# ==========================================
# Plataformas habilitadas
ENABLE_LINKEDIN_AUTO_PUBLISH=true
ENABLE_INSTAGRAM_AUTO_PUBLISH=true
ENABLE_X_AUTO_FORMAT=true  # Solo formateo, no publicación automática

# Horarios de publicación (formato 24h)
LINKEDIN_PUBLISH_TIME=09:00
INSTAGRAM_PUBLISH_TIME=14:00

# Hashtags por defecto
DEFAULT_HASHTAGS_WEB3=#Web3,#Blockchain,#Ethereum,#BandaWeb3
DEFAULT_HASHTAGS_LATAM=#LATAM,#CryptoLatam,#Web3LATAM

# ==========================================
# Logging and Monitoring
# ==========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/automation.log

# ==========================================
# Scheduling
# ==========================================
# Horarios de Spaces (Ciudad de México)
SPACE_SCHEDULE_TUESDAY=12:00
SPACE_SCHEDULE_THURSDAY=12:00
TIMEZONE=America/Mexico_City
